<div id="loginContainer">
    {{#if (not session.isAuthenticated)}}
	<div id="login" class="text-center pagination-centered">
            <div class="row">
		<div class="col-xs-12">
                    <button {{action "authenticate"}} class="btn btn-primary">
			Login via OSF to Begin
		    </button>
		</div>
            </div>
	</div>
    {{else}}
	<div class="pagination-centered text-center">
	    <div class="row panel">
		<div class="col-md-6 col-md-offset-3">
		    <div class="form-group">
			<label>Select a namespace to continue: </label>
			<select class="form-control" onchange={{action (mut selectedNamespace) value="target.value"}}>
			    <option value="">Please select ...</option>
			    {{#each model as |ns|}}
				<option selected={{eq selectedNamespace ns.name}} value={{ns.name}}>{{ns.name}}</option>
			    {{/each}}
			</select>		   
		    </div>
		    <div class="form-group">
			<button class="btn btn-primary" onclick={{action 'selectNamespace'}}>Continue</button>
		    </div>
		</div>
	    </div>
	</div>
    {{/if}}
</div>
